{
  "name": "nodemantra-core",
  "version": "1.0.10",
  "description": "A powerful and versatile Node.js framework for building robust web applications with TypeScript, featuring modular architecture, middleware system, database integration, and built-in search capabilities.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "create-nodemantra": "bin/create-nodemantra.js",
    "nodemantra": ".node_mantra/sdk/artisan.ts"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "USAGE.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "NODE_ENV=production node  dist/index.js",
    "stage": "NODE_ENV=stage node dist/index.js",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "build": "NODE_ENV=production tsc -p .",
    "prepublishOnly": "npm run build",
    "test": "mocha --require ts-node/register 'src/tests/**/*.test.ts'",
    "artisan": "ts-node ./.node_mantra/sdk/artisan.ts",
    "migration:generate": "ts-node ./node_modules/.bin/typeorm migration:generate -d ./src/database/AppDataSource.ts",
    "migration:up": "ts-node ./node_modules/.bin/typeorm migration:run -d ./src/database/AppDataSource.ts",
    "migration:down": "ts-node ./node_modules/.bin/typeorm migration:revert -d ./src/database/AppDataSource.ts",
    "seeder": "ts-node ./node_modules/.bin/typeorm-seeding seed -d ./src/config/database.ts ./src/database/seeders/*.ts",
    "start:socket": "NODE_ENV=development nodemon src/websocket.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "framework",
    "web-application",
    "api",
    "middleware",
    "database",
    "orm",
    "search",
    "meilisearch",
    "authentication",
    "validation",
    "modular",
    "scalable"
  ],
  "author": "Prakash Joshi <developer.prakashjoshi@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/developerprakashjoshi/nodemantra-core.git"
  },
  "bugs": {
    "url": "https://github.com/developerprakashjoshi/nodemantra-core/issues"
  },
  "homepage": "https://github.com/developerprakashjoshi/nodemantra-core#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.369.0",
    "@types/express": "^4.17.17",
    "@types/express-graphql": "^0.9.0",
    "@types/graphql": "^14.5.0",
    "@types/module-alias": "^2.0.1",
    "aws-sdk": "^2.1365.0",
    "axios": "^1.3.6",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.0",
    "connect-pg-simple": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "express-session": "^1.17.3",
    "graphql": "^15.8.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "kafkajs": "^2.2.4",
    "meilisearch": "^0.33.0",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "mongodb": "^5.6.0",
    "mongoose": "^7.3.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "razorpay": "^2.8.6",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.5",
    "stripe": "^12.2.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.15",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@jorgebodega/typeorm-factory": "^1.4.0",
    "@jorgebodega/typeorm-seeding": "^6.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.5",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/express-session": "^1.17.7",
    "@types/joi": "^17.2.3",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.17.6",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "_moduleAliases": {
    "@controllers": "dist/app/controllers",
    "@services": "dist/app/services",
    "@models": "dist/app/models",
    "@routes": "dist/routes",
    "@libs": "dist/libs"
  }
}
